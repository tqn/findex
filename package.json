{
  "name": "findex",
  "version": "0.2.1",
  "description": "Indexes files from a base directory into elasticsearch",
  "main": "./bin/index.js",
  "bin": "./bin/index.js",
  "scripts": {
    "start": "node ./bin/index.js",
    "test": "mocha",
    "coverage": "mocha --reporter mocha-lcov-reporter > ./coverage/lcov.dat",
    "preversion": "npm test",
    "postversion": "git push --follow-tags"
  },
  "author": "Tej Qu Nair",
  "license": "GPL-3.0",
  "dependencies": {
    "coffee-script": "^1.10.0",
    "commander": "^2.8.1",
    "elasticsearch": "^8.2.0",
    "season": "^5.3.0",
    "vinyl-fs": "^2.1.1",
    "vinyl-map": "^1.0.1"
  },
  "devDependencies": {
    "blanket": "^1.1.7",
    "chai": "^3.3.0",
    "coveralls": "^2.11.4",
    "gulp-clip-empty-files": "^0.1.1",
    "mocha": "^2.3.3",
    "mocha-lcov-reporter": "^1.0.0"
  },
  "config": {
    "blanket": {
      "pattern": "test",
      "loader": "./node-loaders/coffee-script"
    }
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "tqn/findex"
  },
  "bugs": {
    "url": "https://github.com/tqn/findex/issues",
    "email": "tej.q.nair@gmail.com"
  }
}
